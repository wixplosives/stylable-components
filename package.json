{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "yarn build:boards && yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "build:boards": "node ./build-board-indexes.js",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^5.2.1",
    "@stylable/webpack-plugin": "^5.2.1",
    "@types/chai": "^4.3.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "16",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@wixc3/board-core": "^2.0.3",
    "@wixc3/react-board": "^2.0.3",
    "chai": "^4.3.6",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^5.6.1",
    "mocha": "^10.0.0",
    "mocha-play": "^3.1.0",
    "playwright-chromium": "^1.26.1",
    "promise-assist": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "typescript": "~4.8.4",
    "util": "^0.12.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "license": "MIT",
  "private": true
}
