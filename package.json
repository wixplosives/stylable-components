{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/dist",
    "build": "npm run build:boards && npm run build:typescript && npm run build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "stc",
    "build:boards": "node ./build-board-index.js",
    "lint": "eslint",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:spec",
    "test:spec": "mocha-web \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "prettier . --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@playwright/browser-chromium": "^1.46.1",
    "@stylable/cli": "^6.1.1",
    "@stylable/esbuild": "^6.1.1",
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.7",
    "@types/node": "20",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@wixc3/board-core": "^4.0.0",
    "@wixc3/react-board": "^4.0.0",
    "chai": "^4.5.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "5.1.0-rc.0",
    "glob": "^11.0.0",
    "mocha": "^10.7.3",
    "mocha-web": "^1.0.2",
    "prettier": "^3.3.3",
    "promise-assist": "^2.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "license": "MIT",
  "private": true
}
