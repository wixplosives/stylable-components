{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^4.8.2",
    "@stylable/core": "^4.8.1",
    "@stylable/webpack-plugin": "^4.8.1",
    "@types/chai": "^4.2.22",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "14",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@wixc3/react-simulation": "^4.0.0",
    "chai": "^4.3.4",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^4.0.0",
    "mocha": "^9.1.3",
    "mocha-play": "^3.0.0",
    "playwright-chromium": "^1.16.3",
    "promise-assist": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.0",
    "typescript": "~4.4.4",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "license": "MIT",
  "private": true
}
