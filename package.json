{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/dist",
    "build": "npm run build:boards && npm run build:typescript && npm run build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "stc",
    "build:boards": "node ./build-board-index.js",
    "lint": "eslint .",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:spec",
    "test:spec": "mocha-web \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "prettier . --write"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.43.1",
    "@stylable/cli": "^6.0.2",
    "@stylable/esbuild": "^6.0.2",
    "@types/chai": "^4.3.14",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "20",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.2.25",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@wixc3/board-core": "^2.5.0",
    "@wixc3/react-board": "^2.5.0",
    "chai": "^4.4.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "mocha-web": "^1.0.2",
    "prettier": "^3.2.5",
    "promise-assist": "^2.0.1",
    "react": "^18.3.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.4.5"
  },
  "license": "MIT",
  "private": true
}
