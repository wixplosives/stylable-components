{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^4.13.3",
    "@stylable/core": "^4.13.3",
    "@stylable/webpack-plugin": "^4.13.3",
    "@types/chai": "^4.3.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "16",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/react-window": "^1.8.5",
    "@wixc3/react-board": "^1.3.0",
    "@wixc3/board-core": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "chai": "^4.3.6",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^5.1.2",
    "mocha": "^10.0.0",
    "mocha-play": "^3.1.0",
    "playwright-chromium": "^1.22.2",
    "promise-assist": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "typescript": "~4.7.3",
    "util": "^0.12.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2"
  },
  "license": "MIT",
  "private": true
}
