{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^4.11.0",
    "@stylable/core": "^4.11.0",
    "@stylable/webpack-plugin": "^4.11.0",
    "@types/chai": "^4.3.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "16",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@wixc3/react-simulation": "^4.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^4.0.0",
    "mocha": "^9.2.2",
    "mocha-play": "^3.1.0",
    "playwright-chromium": "^1.20.0",
    "promise-assist": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.1",
    "typescript": "~4.6.2",
    "util": "^0.12.4",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "license": "MIT",
  "private": true
}
