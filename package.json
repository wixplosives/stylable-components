{
  "name": "stylable-components-repo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/dist",
    "build": "npm run build:boards && npm run build:typescript && npm run build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "stc",
    "build:boards": "node ./build-board-index.js",
    "lint": "eslint",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:spec",
    "test:spec": "mocha-web \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "prettier . --write"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.49.1",
    "@stylable/cli": "^6.1.1",
    "@stylable/esbuild": "^6.1.1",
    "@testing-library/react": "^16.1.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.3",
    "@wixc3/board-core": "^4.6.2",
    "@wixc3/react-board": "^4.6.2",
    "chai": "^5.1.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "glob": "^11.0.1",
    "mocha": "^11.0.1",
    "mocha-web": "^2.0.1",
    "prettier": "^3.4.2",
    "promise-assist": "^2.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.19.1"
  },
  "license": "MIT"
}
