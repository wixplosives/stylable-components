{
  "name": "stylable-components",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "lint": "eslint . -f codeframe",
    "pretest": "yarn build && yarn lint",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js?(x)\"",
    "start": "yarn start:client",
    "start:client": "yarn workspace @sample/app start",
    "start:server": "yarn workspace @sample/server start",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/webpack-plugin": "^4.7.2",
    "@types/chai": "^4.2.22",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "12",
    "@types/react": "^17.0.28",
    "@types/react-dom": "^17.0.9",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "css-loader": "^6.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "lerna": "^4.0.0",
    "mini-css-extract-plugin": "^2.4.2",
    "mocha": "^9.1.2",
    "mocha-play": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^3.0.0",
    "stylable": "^5.4.11",
    "ts-loader": "^9.2.6",
    "typescript": "~4.4.3",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "promise-assist": "^1.3.0"
  }
}
