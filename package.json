{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/dist",
    "build": "yarn build:boards && yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "build:boards": "node ./build-board-index.js",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^5.11.0",
    "@stylable/webpack-plugin": "^5.11.0",
    "@types/chai": "^4.3.5",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "18",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@wixc3/board-core": "^2.2.0",
    "@wixc3/react-board": "^2.2.0",
    "chai": "^4.3.7",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.2.5",
    "html-webpack-plugin": "^5.5.1",
    "lerna": "^6.6.2",
    "mocha": "^10.2.0",
    "mocha-play": "^5.0.1",
    "playwright-chromium": "^1.34.0",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "source-map-loader": "^4.0.1",
    "typescript": "~5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0"
  },
  "license": "MIT",
  "private": true
}
