{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/dist",
    "build": "yarn build:boards && yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "build:boards": "node ./build-board-index.js",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-web \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.43.0",
    "@stylable/cli": "^6.0.1",
    "@stylable/esbuild": "^6.0.1",
    "@types/chai": "^4.3.14",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "20",
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.24",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@wixc3/board-core": "^2.5.0",
    "@wixc3/react-board": "^2.5.0",
    "chai": "^4.4.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.12",
    "lerna": "^8.1.2",
    "mocha": "^10.4.0",
    "mocha-web": "^1.0.2",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.4.5"
  },
  "license": "MIT",
  "private": true
}
