{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/dist",
    "build": "yarn build:boards && yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "build:boards": "node ./build-board-index.js",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.38.1",
    "@stylable/cli": "^5.16.0",
    "@stylable/webpack-plugin": "^5.16.0",
    "@types/chai": "^4.3.6",
    "@types/compression": "^1.7.3",
    "@types/express": "^4.17.18",
    "@types/mocha": "^10.0.2",
    "@types/node": "18",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@types/react-window": "^1.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@wixc3/board-core": "^2.3.0",
    "@wixc3/react-board": "^2.3.0",
    "chai": "^4.3.10",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.5.3",
    "lerna": "^7.3.0",
    "mocha": "^10.2.0",
    "mocha-play": "^6.0.0",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "source-map-loader": "^4.0.1",
    "typescript": "~5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "license": "MIT",
  "private": true
}
