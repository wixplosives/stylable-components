{
  "name": "stylable-components-repo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "yarn build:boards && yarn build:typescript && yarn build:stylable",
    "build:typescript": "tsc --build",
    "build:stylable": "lerna run build:stylable --stream",
    "build:boards": "node ./build-board-indexes.js",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:spec",
    "test:spec": "mocha-play \"packages/*/dist/test/**/*.spec.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@stylable/cli": "^5.7.1",
    "@stylable/webpack-plugin": "^5.7.1",
    "@types/chai": "^4.3.4",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "16",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@wixc3/board-core": "^2.1.3",
    "@wixc3/react-board": "^2.1.3",
    "chai": "^4.3.7",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^8.1.0",
    "html-webpack-plugin": "^5.5.0",
    "lerna": "^6.5.1",
    "mocha": "^10.2.0",
    "mocha-play": "^4.1.2",
    "playwright-chromium": "^1.31.1",
    "promise-assist": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "scroll-into-view-if-needed": "^3.0.6",
    "source-map-loader": "^4.0.1",
    "typescript": "~4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "license": "MIT",
  "private": true
}
